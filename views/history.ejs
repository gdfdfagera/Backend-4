<!DOCTYPE html>
<html lang="<%= lang %>">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pokemon Cards</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/css/main.css">
</head>
<body>
  <nav class="navbar">
    <div class="logo">Assignment 3</div>
    <ul class="nav-links">
      <li><a href="/quiz?lang=<%= lang %>"><%= lang === 'ru' ? 'Викторина' : 'Quiz' %></a></li>
      <li><a href="/pdfSave?lang=<%= lang %>"><%= lang === 'ru' ? 'Сохранить мою историю' : 'Save My History' %></a></li>
      <li><a href="/history?lang=<%= lang %>"><%= lang === 'ru' ? 'История' : 'History' %></a></li>
      <li><a href="/coin?lang=<%= lang %>"><%= lang === 'ru' ? 'Найти криптовалюту' : 'Find Coins' %></a></li>
      <li><a href="/stock?lang=<%= lang %>"><%= lang === 'ru' ? 'Стоимость акций' : 'Price of stocks' %></a></li>
      <li><a href="/login?lang=<%= lang %>"><%= lang === 'ru' ? 'Выйти' : 'Logout' %></a></li>
    </ul>
    <form action="<%= lang === 'en' ? '/history?lang=en' : '/history?lang=ru' %>" class="form-inline ml-auto">
      <div class="form-group">
          <label for="langSelect" class="mr-2" style="color: white;"><%= lang === 'ru' ? 'Язык:' : 'Language:' %></label>
          <select class="form-control" id="langSelect" name="lang" onchange="this.form.submit()">
              <option value="en" <%= lang === 'en' ? 'selected' : '' %>>EN</option>
              <option value="ru" <%= lang === 'ru' ? 'selected' : '' %>>RU</option>
          </select>
      </div>
    </form>
  </nav>

  <main class="container">
    <section id="section1">
        <h2><%= lang === 'ru' ? 'Стоимость акции' : 'Stock price' %></h2>
        <ul id="numberFactsList">
          <% for (const element of stock) { %>
            <li>
              <strong><%= lang === 'ru' ? 'Входные данные:' : 'Input:' %></strong> <%= element.symbol %>, 
              <strong><%= lang === 'ru' ? 'Ответ:' : 'Output:' %></strong> <%= element.price %>
            </li>
          <% } %>
        </ul>
        <button onclick="showSection(2)"><%= lang === 'ru' ? 'Перейти в секцию 2' : 'Go to Section 2' %></button>
      </section>
  
      <section id="section2" style="display: none;">
        <h2><%= lang === 'ru' ? 'Язык:' : 'Language:' %>Pokemons</h2>
        <div id="pokemonCardsContainer" class="card-container">
          <% for (const element of coin) { %>
            <div class="card">
              <p><%= lang === 'ru' ? 'ID криптовалюты:' : 'Coin ID:' %> <%= element.coinID %> m</p>
              <p><%= lang === 'ru' ? 'Валюта:' : 'vsCurrency:' %> <%= element.vsCurrency %></p>
            </div>
          <% } %>
        </div>
        <button onclick="showSection(1)"><%= lang === 'ru' ? 'Перейти в секцию 1' : 'Go to Section 1' %></button>
      </section>
  </main>

  <footer class="bg-body-tertiary text-center text-lg-start">
    <div class="text-center p-3" style="background-color: rgb(201, 196, 196);">
      Gainatulin Dias
      SE-2205
    </div>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
  <script>
    function showSection(sectionNumber) {
      document.getElementById('section1').style.display = sectionNumber === 1 ? 'block' : 'none';
      document.getElementById('section2').style.display = sectionNumber === 2 ? 'block' : 'none';
    }
  </script>
</body>
</html>
